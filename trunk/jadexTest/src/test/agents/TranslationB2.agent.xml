<!--  Super translation bitch 2. --> 
<agent xmlns="http://jadex.sourceforge.net/jadex-bdi"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://jadex.sourceforge.net/jadex-bdi
                      http://jadex.sourceforge.net/jadex-bdi-2.0.xsd"
  name="TranslationB2"
  package="test.agents">

  <plans>
    <plan name="egtrans">
      <body class="EnglishGermanTranslationPlanB2"/>
      	<trigger>
  			<messageevent ref="request_translation"/>
		</trigger>
    </plan>
  </plans>

  <events>
    <messageevent name="request_translation" direction="receive" type="fipa">
      <parameter name="performative" class="String" direction="fixed">
        <value>jadex.base.fipa.SFipa.REQUEST</value>
      </parameter>
    </messageevent>
  </events>

  <properties>
    <property name="debugging">false</property>
  </properties>

</agent>